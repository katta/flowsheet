<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//OpenMRS//DTD OpenMRS Config 1.0//EN" "http://resources.openmrs.org/doctype/config-1.0.dtd">

<module configVersion="1.0">
	
	<!-- Base Module Properties -->
	<id>flowsheet</id>
	<name>Flowsheet</name>
	<version>1.2</version>
	<package>org.openmrs.module.@MODULE_ID@</package>
	<author>Ben Wolfe</author>
	<description>
			Very Basic OpenMRS flowsheet. <br/>
			Adds a link to the Encounters tab on the patient dashboard to 
			this module's "flowsheet".  Currently the flowsheet simply prints
			out all patient observations in reverse chronological order
	</description>

	<activator>@MODULE_PACKAGE@.FlowsheetActivator</activator>
	
	<updateURL>https://dev.openmrs.org/modules/download/flowsheet/update.rdf</updateURL>
	<!-- /Base Module Properties -->
	
	<require_version>1.0.57.1717</require_version>
	
	<extension>
		<point>org.openmrs.patientDashboard.EncountersTabHeader</point>
		<class>@MODULE_PACKAGE@.extension.html.EncounterTabHeaderExt</class>
	</extension>
	
	<!-- Internationalization -->
	<!-- All message codes should start with moduleId.* -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->
	
</module>

